{% extends 'base.html.twig' %}

{% block title %}Voiture index
{% endblock %}

{% block body %}

	<div class="container mt-5">
		<h1>Voiture index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					<th>Marque</th>
					<th>Modele</th>
					<th>Description</th>
					<th>Image</th>
					<th>PrixJournalier</th>
					<th>DateEnregistrement</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for voiture in voitures %}
					<tr>
						<td>{{ voiture.id }}</td>
						<td>{{ voiture.titre }}</td>
						<td>{{ voiture.marque }}</td>
						<td>{{ voiture.modele }}</td>
						<td>{{ voiture.description }}</td>
						<td>{{ voiture.image }}</td>
						<td>{{ voiture.prixJournalier }}</td>
						<td>{{ voiture.dateEnregistrement ? voiture.dateEnregistrement|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('app_voiture_show', {'id': voiture.id}) }}">show</a>
							<a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="9">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_voiture_new') }}">Create new</a>

	</div>
{% endblock %}
